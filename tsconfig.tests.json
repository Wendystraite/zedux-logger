{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "allowJs": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noEmit": true
  },
  "include": ["tests/**/*", "benchmarks/**/*"],
  "files": ["vitest.config.ts", "eslint.config.ts"]
}
